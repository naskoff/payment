<div class="modal fade" id="donate"
     data-bs-backdrop="static" data-bs-keyboard="false"
     aria-labelledby="donate" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title" id="donate-label">Donate</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger alert-dismissible fade show" id="error-message"
                     role="alert" style="display: none;">
                    <strong>Error!</strong> <span class="alert-message"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div id="select-payment-provider" class="payment-steps">
                    <div class="h4 mb-3">Are you sure want to donate 0.01$</div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="payment-type" id="payment-paypal"
                               value="paypal" checked="checked"/>
                        <label class="form-check-label" for="payment-paypal">PayPal</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="payment-type" id="payment-stripe"
                               value="stripe"/>
                        <label class="form-check-label" for="payment-stripe">Stripe</label>
                    </div>
                </div>
                <div id="stripe-form" class="payment-steps" style="display: none;">
                    <form id="payment-form">
                        <div id="payment-element">
                        </div>
                    </form>
                </div>
                <div id="payment-success" class="payment-steps" style="display: none">
                    <div class="alert alert-success" role="alert">
                        <strong>Hooray!</strong> Your payment was successful
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-close" class="btn me-auto" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" id="back-to-payment-choice" class="btn btn-outline-primary" style="display: none">
                    Back
                </button>
                <button type="button" id="continue-to-stripe" class="btn btn-primary" style="display: none">
                        Continue to payment
                </button>
                <button type="button" id="stripe-pay-now" class="btn btn-primary" style="display: none">
                    Pay now
                </button>
                <div class="btn p-0" id="paypal-button-container" style="display: none"></div>
            </div>
        </div>
    </div>
</div>
